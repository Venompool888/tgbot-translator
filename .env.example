# Telegram Bot 配置
BOT_TOKEN=your-telegram-bot-token # Telegram 机器人的 Token

# AI (翻译/对话) API 配置
AI_API_KEY=your-ai-api-key # OpenAI API Key，用于翻译和对话功能
AI_API_ENDPOINT=https://api.openai.com/v1/chat/completions # OpenAI API Endpoint
AI_MODEL=gpt-4o # 使用的 OpenAI 模型

# TTS (语音合成) API 配置
TTS_API_KEY=your-tts-api-key # TTS API Key，用于语音合成功能
TTS_API_ENDPOINT=https://api.openai.com/v1/audio/speech # TTS API Endpoint
TTS_VOICE=nova # 语音合成的声音类型
TTS_MODEL=tts-1-hd # 语音合成的模型
TTS_ENABLE=true # 是否启用语音合成功能

# STT (语音转文本) API 配置
STT_API_KEY=your-stt-api-key # STT API Key，用于语音转文本功能
STT_API_ENDPOINT=https://api.openai.com/v1/audio/transcriptions # STT API Endpoint

